@using IdentityServer.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link text-dark" >Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-page="/Account/Index" asp-route-handler="register" class="nav-link text-dark">Register</a>
    </li>
    <li class="nav-item">
        <a asp-page="/Account/Index" asp-route-handler="login" class="nav-link text-dark">Login</a>
    </li>
}
</ul>
