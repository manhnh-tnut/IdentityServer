@page
@model DeletePersonalModel

<h4>@ViewData["Title"]</h4>

<div class="alert alert-danger" role="alert">
    <span class="fa fa-exclamation-triangle"></span>
    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.Personal.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Personal.Password">Password</label>
                <input asp-for="Personal.Password" class="form-control" />
                <span asp-validation-for="Personal.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Delete Personal Data</button>
    </form>
</div>