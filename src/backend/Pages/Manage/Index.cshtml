@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}
<h4>@ViewData["Title"]</h4>

@await Html.PartialAsync("_ValidationSummary")

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<div class="row">
    <div class="col-lg-2">
        <img-gravatar email="@Model.Manage.Email" class="img-thumbnail" size="150" />
    </div>
    <div class="col-sm-10">
        <form method="post">
            <div class="form-group">
                <label asp-for="Manage.Username">UserName</label>
                <input asp-for="Manage.Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Manage.Email">Email</label>
                <input type="hidden" asp-for="Manage.IsEmailConfirmed" />
                @if (Model.Manage.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Manage.Email" class="form-control" />
                    </div>
                }
                else
                {
                    <input asp-for="Manage.Email" class="form-control" />
                    <button asp-page="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Manage.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manage.PhoneNumber">Phone Number</label>
                <input asp-for="Manage.PhoneNumber" class="form-control" />
                <span asp-validation-for="Manage.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manage.Name">Full name</label>
                <input asp-for="Manage.Name" class="form-control" />
                <span asp-validation-for="Manage.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manage.Website">Website URL</label>
                <input asp-for="Manage.Website" class="form-control" />
                <span asp-validation-for="Manage.Website" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manage.Profile">Profile URL</label>
                <input asp-for="Manage.Profile" class="form-control" />
                <span asp-validation-for="Manage.Profile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manage.StreetAddress">Street address</label>
                <input asp-for="Manage.StreetAddress" class="form-control" />
                <span asp-validation-for="Manage.StreetAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manage.Locality">City</label>
                <input asp-for="Manage.Locality" class="form-control" />
                <span asp-validation-for="Manage.Locality" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manage.Region">Region</label>
                <input asp-for="Manage.Region" class="form-control" />
                <span asp-validation-for="Manage.Region" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manage.PostalCode">Postal code</label>
                <input asp-for="Manage.PostalCode" class="form-control" />
                <span asp-validation-for="Manage.PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manage.Country">Country</label>
                <input asp-for="Manage.Country" class="form-control" />
                <span asp-validation-for="Manage.Country" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>