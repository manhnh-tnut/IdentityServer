@page
@model ChangePasswordModel
<h4>@ViewData["Title"]</h4>

@await Html.PartialAsync("_ValidationSummary")
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manage.OldPassword">Old Password</label>
                <input asp-for="Manage.OldPassword" class="form-control" />
                <span asp-validation-for="Manage.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manage.NewPassword">New Password</label>
                <input asp-for="Manage.NewPassword" class="form-control" />
                <span asp-validation-for="Manage.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manage.ConfirmPassword">Confirm Password</label>
                <input asp-for="Manage.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Manage.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update Password</button>
        </form>
    </div>
</div>
